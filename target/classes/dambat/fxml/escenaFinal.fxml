<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>

<Pane prefHeight="800.0" prefWidth="1280.0" style="-fx-background-color: black;"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="dambat.controller.FinalController">
    
   <children>
      <ImageView fitHeight="800.0" fitWidth="1280.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../img/fondoFinal.jpg" />
         </image>
         <effect>
             <DropShadow radius="50.0" color="black" />
         </effect>
      </ImageView>

      <Label fx:id="player1Score" layoutX="480.0" layoutY="50.0" text="PUNTUAZIOA"
             style="-fx-font-size: 48px; -fx-text-fill: red; -fx-font-weight: bold;
                    -fx-border-color: black; -fx-border-width: 3; -fx-background-color: rgba(0,0,0,0.7);">
         <effect>
            <Glow level="0.9" />
         </effect>
      </Label>

      <Button fx:id="restartButton" layoutX="400.0" layoutY="500.0" text="Berriro jolastu" onAction="#restartGame"
              style="-fx-background-color: darkred; -fx-text-fill: white; -fx-font-size: 20px;
                     -fx-font-weight: bold; -fx-border-color: black; -fx-border-width: 3; -fx-background-radius: 10;">
          <effect>
              <DropShadow radius="10.0" color="red" offsetX="3" offsetY="3" />
          </effect>
      </Button>

      <Button fx:id="exitButton" layoutX="800.0" layoutY="500.0" text="Irten" onAction="#exitGame"
              style="-fx-background-color: darkred; -fx-text-fill: white; -fx-font-size: 20px;
                     -fx-font-weight: bold; -fx-border-color: black; -fx-border-width: 3; -fx-background-radius: 10;">
      </Button>
   </children>
</Pane>
