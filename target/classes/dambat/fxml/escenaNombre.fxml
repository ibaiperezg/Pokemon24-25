<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="backgroundimage" prefHeight="800.0" prefWidth="1280.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="dambat.controller.NombreController">

    <children>
       <ImageView fitHeight="1080.0" fitWidth="1620.0" pickOnBounds="true" preserveRatio="false">
    <image>
        <Image url="@../img/fondoprincipio.jpg" />
    </image>
    <AnchorPane.topAnchor>0.0</AnchorPane.topAnchor>
    <AnchorPane.bottomAnchor>0.0</AnchorPane.bottomAnchor>
    <AnchorPane.leftAnchor>0.0</AnchorPane.leftAnchor>
    <AnchorPane.rightAnchor>0.0</AnchorPane.rightAnchor>
</ImageView>


        <Label layoutX="440.0" layoutY="50.0" prefHeight="78.0" prefWidth="400.0"
               style="-fx-background-color: rgba(0,0,0,0.8); -fx-text-fill: red;
                      -fx-font-size: 36px; -fx-font-weight: bold; -fx-border-color: darkred; -fx-border-width: 3;">
            <text>SARTU ZURE IZENA:</text>
            <effect>
                <Glow level="0.8" />
            </effect>
        </Label>

        <TextField fx:id="nombreField" layoutX="870.0" layoutY="50.0" prefHeight="47.0" prefWidth="300.0"
                   style="-fx-background-color: black; -fx-text-fill: white;
                          -fx-font-size: 24px; -fx-border-color: darkred; -fx-border-width: 2;">
        </TextField>

        <!-- SQLiten izena gordetzeko botoia -->
        <Button fx:id="gordeButton" layoutX="1180.0" layoutY="50.0" prefHeight="47.0" prefWidth="100.0"
                text="GORDE" onAction="#guardarNombre"
                style="-fx-background-color: darkred; -fx-text-fill: white; -fx-font-size: 20px;
                       -fx-border-color: black; -fx-border-width: 2;">
        </Button>

        <Button fx:id="hasiButton" layoutX="550.0" layoutY="600.0" prefHeight="91.0" prefWidth="436.0"
                text="HASI" onAction="#hasi"
                style="-fx-background-color: darkred; -fx-text-fill: white; -fx-font-size: 48px;
                       -fx-font-weight: bold; -fx-border-color: black; -fx-border-width: 3; -fx-background-radius: 15;">
        </Button>
    </children>
</AnchorPane>
